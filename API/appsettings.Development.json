{
  "ConfigSettings": {
    "AuthSettings": {
      "Type": "JWT",
      "HeaderName": "Authorization",
      "RefreshTokenHeaderName": "RefreshToken",
      "TokenPrefix": "Bearer",
      "ContentType": "application/json",
      "SecretKey": "testabcdefghijkmnopqrstuvwxyzABCDEFGHJKLergMNPQRSTUVWXYZ23456789app",
      "TokenUserIdKey": "userid",
      "TokenExpirationTimeInHours": 24,
      "RefreshTokenAdditionalMinutes": 10
    },
    "ConnectionStrings": {
      "AppDb": "Host=localhost;Database=BackendStarterDb;Username=dis;Password=dis;"
    },
    "DatabaseOptionSettings": {
      "MaxRetryCount": 3,
      "CommandTimeout": 30,
      "EnableDetailedErrors": true
    },
    "CryptographySettings": {
      "KeyBase64": "abcdefgh*&^%$#@!",
      "VBase64": "hgfedcba*&^%$#@!"
    },
    "SwaggerSettings": {
      "IsEnabled": true,
      "Title": "API STARTER",
      "Version": "v1",
      "Theme": "/swagger_ui/dark.css"
    },
    "RequestSettings": {
      "PageIndex": "PageIndex",
      "PageSize": "PageSize"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "NETStarter",
      "Environment": "Development"
    }
  }
}